  </div>

  <div class="field form-group">
    <%= form.label :last_name, style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field form-group">
    <%= form.label :language, style: "display: block" %>
    <%= form.text_field :language %>
  </div>

  <div class="field form-group">
    <%= form.label :country, style: "display: block" %>
    <%= form.text_field :country %>
  </div>

  <div class="field form-group">
    <%= form.label :tandem_id, style: "display: block" %>
    <%= form.text_field :tandem_id %>
  </div>

  <div class="field form-group">
    <%= form.number_field :model_id, 
    id: :friend_model_id, value: current_model.id,
    type: :hidden
     %>
  </div>
<br />
<br />

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
  <br />

<% end %>
